<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mbste.dao.NewsFeedDao">
    <sql id="pagination">
        <if test="offset!=null">
            LIMIT #{offset}
            <if test="count!=null">
                ,#{count}
            </if>
        </if>
    </sql>
    <sql id="filter">
        <if test="clientId!=null">
            AND client_id=#{clientId}
        </if>
        <if test="newsId!=null">
            AND news_id=#{newsId}
        </if>

    </sql>

    <select id="findById" resultType="com.mbste.model.NewsFeed" parameterType="map">
        select * from news_feed where status!=99
        <include refid="filter"/>
        <include refid="pagination"/>
    </select>

    <update id="delete" parameterType="map">
        update news_feed set status==99 where status!=99
        <include refid="filter"/>
    </update>

    <insert id="create" parameterType="map">
       insert into news_feed(client_id,picture_id,blog_id)
        values(#{clientId},#{pictureId},#{blogId}
    </insert>
</mapper>